<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.image.ImageView?>
<fx:root id="blogPostDisplay" type="javafx.scene.layout.VBox"
         stylesheets="@../CSS/blogPostDisplay.css" prefHeight="400.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/"
         xmlns:fx="http://javafx.com/fxml/" alignment="TOP_CENTER">
    <VBox
          maxHeight="-Infinity"
          maxWidth="-Infinity"
          minHeight="-Infinity"
          minWidth="-Infinity">
        <children>
            <Text fx:id="titleText">
                <font>
                    <Font size="18.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </Text>
            <ImageView fx:id="blogImage">

            </ImageView>
            <Text fx:id="authorText" wrappingWidth="600">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </Text>
            <Text fx:id="dateText" wrappingWidth="600">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </Text>
            <Text fx:id="bodyText" wrappingWidth="1000">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </Text>
        </children>
    </VBox>
</fx:root>


